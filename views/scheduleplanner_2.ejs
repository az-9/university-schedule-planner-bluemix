<body>

<div id="banner">
    <div class="container-fluid " role="main">

        <div class="jumbotron " style="background-color: transparent;color: #FFF;">


            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">

                    <h2 style=" text-align: center;">
                        <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                        &nbsp;KSU Schedule Planner&nbsp;&nbsp;
                    </h2></div>
                <div class="col-md-4">

                </div>
            </div>
        </div>

        <div class="col-md-3"></div>
        <div class=" col-md-6">
            <div class="alert alert-danger" role="alert" id="error" style="display: none">
                error please try again
            </div>
            <div class="panel panel-default " style="opacity: 0.95;">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h3>
                            Search
                        </h3></div>
                </div>
                <div class="panel-body">
                    <div id="step1">
                        <form>
                            <div class="form-group">
                                <label for="university">University:</label>
                                <select class=" form-control col-md-12" style="width: 100%;" id="university">
                                    <option selected disabled>Select University</option>
                                    <option id='0'>KSU جامعة الملك سعود</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="degree">Location:</label>

                                <select class="form-control col-md-12" id="place">
                                    <option selected disabled>Select Location</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="degree">Degree:</label>
                                <select class="form-control col-md-12" id="degree">
                                    <option selected disabled>Select Degree</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="department">Department:</label>
                                <select class="form-control col-md-12" id="department">
                                    <option selected disabled>Select Department</option>
                                </select>
                            </div>
                        </form>
                        <hr>
                        <div class="span7 text-center">
                            <button onclick="if(verify_step1()){populateCoursesAddList();} return false;"
                                    class="btn btn-primary ">Next
                            </button>
                        </div>
                    </div>
                    <div id="step2">
                        <div class="control-group" id="fields">
                            <label class="control-label" for="field1">Add Course:</label>

                            <div class="controls">
                                <form id="coursesAddList" autocomplete="off">
                                    <div class="entry input-group col-md-12">


                                        <select class="form-control">
                                            <option>5</option>
                                        </select>



                                        <span class="input-group-btn">

                                            <a style=" margin-right: 10px" type="button"
                                               aria-expanded="false"
                                               class="btn btn-default collapse-next">
                                                <span class="glyphicon glyphicon-search"></span>
                                            </a>

                                            </span>
                                            <span class="input-group-btn">
                                        <a type="button" class="btn btn-success btn-add ">
                                            <span class="glyphicon glyphicon-plus"></span>
                                        </a>
                                        </span>
                                    </div>


                                    <div class="collapse">
                                        <div class="well">
                                            <form class="form-inline">
                                                <p>
                                                    Lecturer ( Lecturer's names seperated by a comma) :
                                                </p>

                                                <div class="row">
                                                    <div class="form-group col-md-3">
                                                        <select class="form-control filter_type">
                                                            <option>Contain</option>
                                                            <option>Doesn't Contain</option>
                                                        </select>
                                                    </div>

                                                    <div class="form-group col-md-9">

                                                        <input type="text" class="form-control filter_content">
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>


                                </form>
                                <br>
                                <small>Click on <span class="glyphicon glyphicon-plus gs"></span> to add a course
                                </small>
                            </div>
                            <hr>
                            <div class="span7 text-center">
                                <button onclick="if(verify_step2()){populateSchedule();}return false;"
                                        class="btn btn-primary ">Next
                                </button>
                                <button onclick="$('#step1').show();$('#step2').hide();$('#step3').hide();$('#error').hide();return false;"
                                        class="btn btn-default ">Previous
                                </button>
                            </div>
                        </div>
                    </div>
                    <div id="step3">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" checked> show available only

                            </label>
                        </div>
                        <br><br><br>

                        <div id="calendar1" class="fc fc-ltr fc-unthemed">
                            <div id="details1" class="datagrid">

                            </div>
                        </div>
                        <div id="calendar2" class="fc fc-ltr fc-unthemed">
                            <div id="details2" class="datagrid">

                            </div>
                        </div>
                        &nbsp;&nbsp;&nbsp;
                        <div class="span7 text-center">
                            <button onclick="$('#step1').hide();$('#step2').show();$('#step3').hide();return false;"
                                    type="submit"
                                    class="btn btn-default">Previous
                            </button>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade in" id="loadingModal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="preloader">
                                <div class="preloader-container">
                                    <span class="animated-preloader"></span>
                                </div>
                            </div>
                            <br>

                            <h1 style="text-align: center">
                                please wait ...
                            </h1>
                        </div>
                        <div class="modal-footer" id="loadingCancel">
                            <button type="button" class="btn btn-danger center-block" data-dismiss="modal">Cancel
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class=" col-md-3">

        </div>
    </div>
</div>

